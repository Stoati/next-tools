{
  "compilerOptions": {
    "target": "es2019",                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                      
    "skipLibCheck": true,                            
    "jsx": "react-jsx", 
    "module": "ESNext",  
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "outDir": "dist/typescript",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
  }
}
